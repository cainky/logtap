# logtap configuration

# Server settings
LOGTAP_HOST=0.0.0.0
LOGTAP_PORT=8000

# Log directory (default: /var/log)
LOGTAP_LOG_DIRECTORY=/var/log

# API key for authentication (optional - leave empty to disable auth)
LOGTAP_API_KEY=

# Testing mode (uses tests/fixtures/log instead of /var/log)
LOGTAP_TESTING=false
